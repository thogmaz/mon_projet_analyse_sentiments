{% extends 'base.html.twig' %}

{% block title %}Liste des tags{% endblock %}

{% block body %}
    <h1>Liste des tags</h1>

    <a href="{{ path('tag_create') }}" class="btn btn-primary mb-3">Créer un nouveau tag</a>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for tag in tags %}
                <tr>
                    <td>{{ tag.id }}</td>
                    <td>{{ tag.name }}</td>
                    <td>
                        <a href="{{ path('tag_edit', {'id': tag.id}) }}" class="btn btn-warning">Éditer</a>
                        <a href="{{ path('tag_delete', {'id': tag.id}) }}" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun tag trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}