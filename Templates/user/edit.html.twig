{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur : {{ user.username }}{% endblock %}

{% block body %}
    <h1>Modifier l'utilisateur : {{ user.username }}</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-success">Enregistrer les modifications</button>
    {{ form_end(form) }}

    <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-secondary">Retour aux détails</a>
    <a href="{{ path('user_index') }}" class="btn btn-secondary">Retour à la liste</a>
{% endblock %}