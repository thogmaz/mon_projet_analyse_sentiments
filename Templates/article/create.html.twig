{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel article{% endblock %}

{% block body %}
    <h1>Créer un nouvel article</h1>

    {{ form_start(form) }}
        {{ form_row(form.title, {'label': 'Titre'}) }}
        {{ form_row(form.content, {'label': 'Contenu'}) }}
        {{ form_row(form.category, {'label': 'Catégorie'}) }}
        {{ form_row(form.tags, {'label': 'Tags'}) }}
        <button type="submit">Créer</button>
    {{ form_end(form) }}

    <a href="{{ path('article_index') }}">Retour à la liste des articles</a>
{% endblock %}