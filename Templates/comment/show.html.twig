{% extends 'base.html.twig' %}

{% block title %}Détails du commentaire{% endblock %}

{% block body %}
    <h1>Détails du commentaire</h1>

    <p>ID : {{ comment.id }}</p>
    <p>Contenu : {{ comment.content }}</p>
    <p>Auteur : {{ comment.author }}</p>
    <p>Date de création : {{ comment.createdAt|date('Y-m-d H:i:s') }}</p>
    <p>Article associé : <a href="{{ path('article_show', {'id': comment.article.id}) }}">{{ comment.article.title }}</a></p>

    <a href="{{ path('comment_edit', {'id': comment.id}) }}" class="btn btn-primary">Éditer</a>
    <a href="{{ path('comment_index') }}" class="btn btn-secondary">Retour à la liste</a>

    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}